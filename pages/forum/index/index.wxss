/* pages/forum/index/index.wxss */

.menus{
    display: flex;
    padding: 15px 0;
    flex-wrap: wrap;
}

.menu-item{
    flex: 1;
    align-items: center;
    align-self: center;
    padding: 10px 0;
}

.menu-icon{
    align-items: center;
    align-self: center;
    text-align: center;
}

.menu-icon-img{
    width: 50px;
    height: 50px;
    border-radius: 25px;
    display: inline-block;
}

.menu-title{
    font-size: 14px;
    text-align: center;
    line-height: 1;
    margin-top: 5px;
}