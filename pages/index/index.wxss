/* pages/first/first.wxss */
.swiper-img{
  width: 100%;
  height: 100%;
}
.swiper-item{
  display: block;
  height: 150px;
}

.global-menus{
  display: block;
  background-color: #394263;
  margin-bottom: 10px;
}
.menu-wrapper{
    margin: -1px;
    display: flex;
    flex-direction: row;
    flex-flow: wrap;
    padding: 10px 0;
}
.menu-wrapper-li{
    flex: 1;
    width: 25%;
    min-width: 25%;
    max-width: 25%;
    padding: 10px 0;
    float: left;
    text-align: center;
    background-color: #394263;
}
.menu-warpper-li-image{
    width: 40px;
    height: 40px;
    border-radius: 20px;
}
.menu-warpper-li-title{
    text-align: center;
    font-size: 20rpx;
    color: #ffffff;
    display: block;
}

.news-wrapper{
  background-color: #394263;
}
.news-li{
    display: flex;
    padding: 15px 10px;
    border-bottom: 1px #5b637d solid;
}
.news-image{
    flex: 1;
    width: 100px;
    min-width: 100px;
    max-width: 100px;
    height: 80px;
    display: block;
    margin-right: 10px;
    border-radius: 2px;
}
.news-box{
    flex: 1;
    height: 80px;
    position: relative;
    letter-spacing: 2px;
}
.news-title{
    font-size: 14px;
    font-weight: 400;
    line-height: 1.2;
    display: block;
    margin-bottom: 7px;
    color: #ffffff;
}
.news-info{
    color: #aaa;
    font-size: 12px;
    position: absolute;
    left: 0;
    bottom: 0;
}
.news-created_at{
    position: absolute;
    right: 0;
    bottom: 0;
    font-size: 13px;
    color: #aaa;
}
.more-div{
  display: block;
  text-align: center;
  line-height: 50px;
}
