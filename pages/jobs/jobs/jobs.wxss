/* pages/jobs/jobs/jobs.wxss */
.job-list{
    display: block;
    padding: 0 10px;
}

.job-item{
    padding: 10px 0;
    border-bottom: 1px #999 solid;
    display: flex;
}

.company-logo{
    width: 60px;
    height: 60px;
    display: block;
    margin-right: 10px;
    border-radius: 5px;
}

.job-content{
    flex: 1;
    display: flex;
    flex-direction: column;
}

.job-title-wrap{
    flex: 1;
}

.job-title{
    font-size: 16px;
    line-height: 1.2;
    display: block;
}

.company-name {
    font-size: 12px;
    color: #ccc;
    margin-top: 3px;
    display: block;
}

.job-data{
    display: flex;
    line-height: 1;
}

.job-location{
    font-size: 12px;
    color: #fff;
    flex: 1;
}

.job-time{
    font-size: 12px;
}