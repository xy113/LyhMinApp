/* components/post/itemlist/itemlist.wxss */
.post-list{
    display: block;
}

.post-item{
    display: flex;
    padding: 10px;
    border-bottom: 0.5px #666 solid
}

.post-image{
    width: 100px;
    height: 80px;
    margin-right: 10px;
}

.post-content{
    flex: 1;
}

.post-title{
    font-size: 16px;
    color: #fff;
    line-height: 1.2;
}